{
  "name": "vidora",
  "version": "0.0.0",
  "description": "A modern video and audio downloader from YouTube and many other sites",
  "main": "./out/main/index.js",
  "author": {
    "name": "Mohamed",
    "email": "mo.job3830@gmail.com"
  },
  "homepage": "https://electron-vite.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamed7-dev/vidora.git"
  },
  "license": "GPL-3.0",
  "publish": {
    "provider": "github",
    "owner": "mohamed7-dev",
    "repo": "vidora",
    "private": true
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "publish:linux": "electron-builder --linux --publish always",
    "icons:gen": "node scripts/gen-icons.mjs",
    "test:ffmpeg-download": "tsx scripts/test-ffmpeg-download.ts",
    "test:ytdlp-download": "tsx scripts/test-ytdlp-download.ts",
    "i18n:extract": "tsx src/shared/i18n/extract-locales.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.9",
    "yt-dlp-wrap-plus": "^2.4.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/html-vite": "8.6.14",
    "@storybook/test": "8.6.14",
    "@types/node": "^22.18.6",
    "@vitest/ui": "4.0.15",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.6.2",
    "sharp": "^0.33.5",
    "storybook": "8.6.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
